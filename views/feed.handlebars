<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FureverFriends Feed</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body class="bg-pageBg text-textColor">

    <div class="container mx-auto p-6">
        <!-- Header -->
        <header class="text-center text-4xl mb-8">
            <!-- Potential Header Content -->
        </header>

        <!-- Actions (List Pet & Logout) -->
        <div class="flex justify-between mb-6">
            <button id="showListPetForm" class="bg-actionColor px-4 py-2 rounded-full text-white shadow-md">List
                Pet</button>
            <div>
                <a href="/profile" class="bg-actionColor px-4 py-2 rounded-full text-white shadow-md mr-4">Profile</a>
                <button id="logout"
                    class="bg-secondaryAction px-4 py-2 rounded-full text-textColor shadow-md">Logout</button>
            </div>
        </div>

        <script>
            // Show the 'List Pet' form when the 'List Pet' button is clicked
            document.getElementById('showListPetForm').addEventListener('click', function () {
                document.getElementById('listPetForm').classList.remove('hidden');
            });
        </script>
        <script src="/js/logout.js"></script>

        <!-- List Pet Form (Initially hidden) -->
        <div id="listPetForm" class="hidden">
            <form action="/api/pet" method="POST" class="bg-white p-6 rounded shadow-md">
                <h2 class="text-2xl mb-4">List a New Pet</h2>
                <div>
                    <label for="name">Pet Name:</label>

                    <input type="text" id="name" name="name" required class="w-full p-2 rounded">
                </div>
                <div>
                    <label for="age">Age:</label>
                    <input type="number" id="age" name="age" min="1" required class="w-full p-2 rounded">

                </div>
                <div>
                    <label for="type">Type:</label>
                    <select id="type" name="type" required class="w-full p-2 rounded">
                        <option value="dog">Dog</option>
                        <option value="cat">Cat</option>
                        <option value="bird">Bird</option>
                        <option value="fish">Fish</option>
                        <option value="cow">Cow</option>
                        <option value="snake">Snake</option>
                        <option value="horse">Horse</option>
                        <option value="rabbit">Rabbit</option>
                        <option value="lizard">Lizard</option>
                        <option value="pig">Pig</option>
                        <option value="hedgehog">Hedgehog</option>

                        <!-- Add more options as needed -->
                    </select>
                </div>
                <div>
                    <label for="breed">Breed:</label>
                    <input type="text" id="breed" name="breed" required class="w-full p-2 rounded">
                </div>
                <div>
                    <label for="weight">Weight:</label>

                    <input type="number" id="weight" name="weight" min="1" required class="w-full p-2 rounded">

                </div>
                <div>
                    <label for="description">Description:</label>
                    <textarea id="description" name="description" class="w-full p-2 rounded"></textarea>
                </div>
                <div>
                    <label for="user_email">Your Email:</label>
                    <input type="email" id="user_email" name="user_email" required class="w-full p-2 rounded">
                </div>
                <!-- Add any other necessary fields -->
                <button type="submit" class="mt-4 bg-actionColor px-4 py-2 rounded-full text-white shadow-md">List
                    Pet</button>
            </form>
        </div>
        <!-- Pets Listing -->
        <div class="pets-container">
            {{#each pet}}
            <script>console.log(pet)</script>
            <div class="mb-6 p-4 bg-cardBg rounded-lg shadow-lg flex flex-col justify-center text-center">
                <img src="{{ this.image_url }}" alt="{{ this.name }} Image">
                <h2>Name: {{this.name}}</h2>
                <p>Type: {{this.type}}</p>
                <p>Breed: {{this.breed}}</p>
                <p>Description: {{this.description}}</p>
            </div>
            {{else}}
            <center>
                <p>No pets found.</p>
            </center>
            {{/each}}
        </div>
</body>

</html>