<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GreenSnaps Feed</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="style.css">
</head>

<body class="bg-pageBg text-textColor">

    <div class="container mx-auto p-6">

        <!-- Header -->
        <header class="text-center text-4xl mb-8">
            <h1 class="font-bold text-headerColor border-b-2 border-headerBorder py-2">GreenSnaps</h1>
        </header>

        {{#each posts}}
        <!-- Post Content -->
        <div class="mb-6 p-4 bg-cardBg rounded-lg shadow-lg">

            <!-- Dynamic User Profile and Name -->
            <div class="flex items-center mb-4">
                <img src="{{this.user.profilePic}}" alt="Profile Picture" class="w-10 h-10 rounded-full mr-4">
                <span class="text-lg font-semibold">{{this.user.username}}</span>
            </div>

            <!-- Dynamic Image -->
            <img src="{{this.imagePath}}" alt="User Photo" class="w-full object-contain rounded-t-lg">
            <p class="text-lg pt-4">{{this.caption}}</p>

            <!-- Dynamic Comments -->
            <h2 class="text-2xl mt-6 mb-4 text-headerColor border-b-2 border-headerBorder py-2">Comments</h2>
            {{#each this.comments}}
            <div class="flex items-center mt-2">
                <img src="{{this.user.profilePic}}" alt="Commenter Profile Picture" class="w-6 h-6 rounded-full mr-2">
                <p class="text-lg">{{this.user.username}}: {{this.text}}</p>
            </div>
            {{/each}}
            
            <!-- Comment Form -->
            <form action="/post-comment" method="POST" class="mt-4">
                <textarea name="comment" class="w-full p-2 rounded" placeholder="Add a comment..."></textarea>
                <button type="submit" class="mt-2 bg-actionColor px-4 py-2 rounded-full text-white shadow-md">Post</button>
            </form>
        </div>
        {{/each}}

        <!-- Actions (Upload & Logout) -->
        <div class="flex justify-between mb-6">
            <button class="bg-actionColor px-4 py-2 rounded-full text-white shadow-md">Upload</button>
            <button class="bg-secondaryAction px-4 py-2 rounded-full text-textColor shadow-md">Logout</button>
        </div>

    </div>
</body>
</html>
