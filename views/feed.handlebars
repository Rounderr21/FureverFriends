<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FureverFriends Feed</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body class="bg-pageBg text-textColor">

    <div class="container mx-auto p-6">
        <!-- Header -->
        <header class="text-center text-4xl mb-8">
            <!-- Potential Header Content -->
        </header>

        <!-- List Pet Form (Initially hidden) -->
       <div id="listPetForm" class="hidden">
    <form action="/api/pets" method="POST" class="bg-white p-6 rounded shadow-md">
        <h2 class="text-2xl mb-4">List a New Pet</h2>
        <div>
            <label for="name">Pet Name:</label>

               <input type="text" id="name" name="name" required class="w-full p-2 rounded">
        </div>
        <div>
            <label for="age">Age:</label>
           <input type="number" id="age" name="age" min="1" required class="w-full p-2 rounded">

        </div>
        <div>
            <label for="type">Type:</label>
            <input type="text" id="type" name="type" required class="w-full p-2 rounded">
        </div>
        <div>
            <label for="breed">Breed:</label>
            <input type="text" id="breed" name="breed" required class="w-full p-2 rounded">
        </div>
        <div>
            <label for="weight">Weight:</label>

            <input type="number" id="weight" name="weight" min="1" required class="w-full p-2 rounded">

        </div>
        <div>
            <label for="description">Description:</label>
            <textarea id="description" name="description" class="w-full p-2 rounded"></textarea>
        </div>
        <div>
            <label for="user_email">Your Email:</label>
            <input type="email" id="user_email" name="user_email" required class="w-full p-2 rounded">
        </div>
        <!-- Add any other necessary fields -->
        <button type="submit" class="mt-4 bg-actionColor px-4 py-2 rounded-full text-white shadow-md">List Pet</button>
    </form>
</div>
        <!-- Pets Listing -->
        {{#each pets}}
        <div class="mb-6 p-4 bg-cardBg rounded-lg shadow-lg">
            <!-- Pet Content Here -->
        </div>
        {{/each}}

        <!-- Actions (List Pet & Logout) -->
        <div class="flex justify-between mb-6">
            <button id="showListPetForm" class="bg-actionColor px-4 py-2 rounded-full text-white shadow-md">List Pet</button>
            <button id="logout" class="bg-secondaryAction px-4 py-2 rounded-full text-textColor shadow-md">Logout</button>
        </div>
    </div>

    <script>
        // Show the 'List Pet' form when the 'List Pet' button is clicked
        document.getElementById('showListPetForm').addEventListener('click', function() {
            document.getElementById('listPetForm').classList.remove('hidden');
        });
    </script>
    <script src="/js/logout.js"></script>
</body>
</html>
